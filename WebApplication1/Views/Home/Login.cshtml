@{
    ViewData["Title"] = "nøsted &";
}
<h1>@ViewData["Title"]</h1>

<div class="undertitle">
    <p>Serviceportal</p>
</div>

<div style="text-align: center;">
    <form id ="form_login">
        <p style ="font-weight: bold;">Velkommen!</p>
        <div class="form-group">
            <label for="exampleUsername">Brukernavn</label>
            <input type="text" class="form-control" id="exampleUsername" aria-describedby="usernameHelp" placeholder="Brukernavn">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Passord</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Passord">
        </div>
        <button type="submit" class="btn btn-primary">Fortsett</button>
    </form>
</div>


<style>
    .btn-primary {
        margin-top: 10px;
        background-color: rgba(244,141,1,255);
        border-color: rgba(244,141,1,255);
}

    .btn-primary:hover {
            background-color: rgba(224,121,1,255);
            border-color: rgba(224,121,1,255);
    }

    form {
        border: 1px solid black; /* Legg til ønsket grensestil her */
        margin-top: 20px;
        padding: 20px;
        border-radius: 3%;
        background-image: linear-gradient(to bottom, lightgrey, lightblue);
        

    }

    h1 {
        text-align: center;
        color: rgba(113,133,143,255);
        font-size: 4em;
        font-family: Mensrea Light;
    }

    .undertitle {
        text-align: center;
        margin-top: -10px;
        color: rgba(113,133,143,255);
    }
    
    body{
        background-image: linear-gradient(to bottom, rgba(16,24,32,255) 60%, lightgrey);
    }
</style>