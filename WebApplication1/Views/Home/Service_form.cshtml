@{
    ViewData["Title"] = "Service Form";
}

<style>
    body{
        background-image: url(https://res.cloudinary.com/mhadaily/image/upload/w_1600,f_auto,q_85/nosted/cmspro/homepage_bg.jpg);
        background-size: cover;
    }

    .ramme {
        margin-top: 60px;
        margin-left:auto;
        border: 1px solid black; /* Legg til ønsket grensestil her */
        margin-right: 550px;
        padding: 20px;
        background-color: rgba(16,24,32,255);
        
    }
    form {
        border: 1px solid black; /* Legg til ønsket grensestil her */
        padding: 20px;
        background-color: white;
    }

    .undertittel {
        text-align: center;
        color: rgba(244,141,1,255);
        font-weight: bold;
        font-size: 25px;
    }

    .btn-dark {
        background-color: rgba(16,24,32,255);
        margin-top: 10px;
        color: rgba(244,141,1,255);
        border-color: rgba(244,141,1,255);
    }

    .btn-dark:hover {
            background-color: rgba(224,121,1,255);
            border-color: rgba(224,121,1,255);
            color: rgba(16,24,32,255);

    }

    .save-buttons{
        margin-left:200px;
    }
</style>

