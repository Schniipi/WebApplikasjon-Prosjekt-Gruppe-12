    <br />
    <input asp-for="Etternavn" type="text" /><br />
    <label asp-for="Bedrift"></label>
    <br />
    <input asp-for="Bedrift" type="text" /><br />
    <label asp-for="TelefonNR"></label>
    <br />
    <input asp-for="TelefonNR" type="text" /><br />
    <label asp-for="Adresse"></label>
    <br />
    <input asp-for="Adresse" type="text" /><br />
    <br />
    <input type="submit" />
</form>

