@model WebApplication1.Tables.KundeData;
@{
    ViewData["Title"] = "Service Form";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/NyKunde.css" asp-append-version="true" />

<h1>Registrer ny kunde her</h1>

<!--legg til en kunde her-->
<form asp-controller="InsertData" asp-action="Save" method="post" enctype="application/x-www-form-urlencoded">
